<%= simple_form_for(@script) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :body, input_html: {class: "col-md-11 codemirror", style: "height: 300px;"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, {class: "btn btn-sm btn-primary", data: { keybinding: 'shift+s'}} %>
    <%= link_to 'Back', scripts_path, { class: "btn btn-sm btn-light btn-cancle", data: { keybinding: 'shift+b' }} %>
  </div>
<% end %>
