<%= simple_form_for([@server,@app]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :repo_url %>
    <%= f.input :branch %>
    <%= f.input :domain %>
    <%= f.input :nginx_ssl %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, {class: "btn btn-sm btn-primary", data: { keybinding: 'shift+s'}} %>
    <%= link_to 'Back', server_apps_path, { class: "btn btn-sm btn-light btn-cancle", data: { keybinding: 'shift+b' }} %>
  </div>
<% end %>
